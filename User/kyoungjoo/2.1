#lang planet neil/sicp

(define (make-rat n d)
  (if (or (> n 0) (< d 0)
          (and (< n 0) (< d 0)))
      (cons (- 0 n) (- 0 d))
      (cons n d)))

(define (number x) (car x))
(define (denom x) (cdr x))

(define (print-rat x)
  (newline)
  (display (number x))
  (display "/")
  (display (denom x)))

(define one-half (make-rat 1 2))
(print-rat one-half)
